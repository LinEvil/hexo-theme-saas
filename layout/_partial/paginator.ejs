<% if (page.total > 1) { %>
<div id="pagination" class="is-centered has-text-centered mb-4">
    <div class="field has-addons has-addons-centered">
        <% if (page.prev) { %>
        <p class="control">
            <a href="<%- url_for(page.prev_link) %>">
                <button class="button is-info is-light">
                    <span><%= __('partial.page_prev') %></span>
                </button>
            </a>
        </p>
        <% } %>
        <p class="control">
            <button class="button is-info is-light">
                <span><%= __('partial.page', page.current, page.total) %></span>
            </button>
        </p>
        <% if (page.next) { %>
        <p class="control">
            <a href="<%- url_for(page.next_link) %>">
                <button class="button is-info is-light">
                    <span><%= __('partial.page_next') %></span>
                </button>
            </a>
        </p>
        <% } %>
    </div>
</div>
<% } %>