<!DOCTYPE html>
<% let lang = config.language %>
<% if (Array.isArray(lang)) lang = lang[0] %>
<html<%= lang ? " lang=" + lang.substring(0, 2) : ""%>>
    <%- partial('_partial/head') %>

    <body>
        <% if (theme.features.bgtitle) { %>
        <div id="bgTitle" class="bgText has-text-grey-lighter"><%= config.title %></div>
        <% } %>
        <%- partial('_partial/header_bar') %>
        <%- body %>
        <% if (is_post() && theme.features.comments) { %>
        <%- partial('_custom/comments') %>
        <% } %>
        <%- partial('_partial/footer') %>
    </body>

    </html>